{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "extendedDiagnostics": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
  }